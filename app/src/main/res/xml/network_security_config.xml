<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost for emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Local network addresses -->
        <domain includeSubdomains="true">192.168.0.11</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Interledger test wallet -->
        <domain includeSubdomains="true">wallet.interledger-test.dev</domain>
        <domain includeSubdomains="true">ilp.interledger-test.dev</domain>
    </domain-config>

    <!-- For production, remove the above and use HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>